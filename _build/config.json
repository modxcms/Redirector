{
  "name": "Redirector",
  "lowCaseName": "redirector",
  "description": "Handles your site redirects.",
  "author": "Shaun McCormick",
  "version": "2.0.9-rc1",
  "package": {
    "menus": [
      {
        "text": "redirector",
        "description": "redirector.menu_desc",
        "action": "home",
        "parent": "components"
      }
    ],
    "elements": {
      "plugins": [
        {
          "name": "Redirector",
          "events": [
            "OnPageNotFound",
            "OnDocFormRender",
            "OnDocFormSave"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "track_uri_updates",
        "area": "manager",
        "value": 0
      }
    ]
  },
  "database": {
    "tables": [
      "modRedirect"
    ]
  },
  "build": {
    "resolver": {
      "after": [
        "resolve.tables.php",
        "resolve.dbchanges.php"
      ]
    }
  }
}
